colorscheme ron


" Tabs
set tabstop=8       " Change tab width. This will impact exiting text
set shiftwidth=8    " Indent width used by reindent (<< and >>)
set softtabstop=8   " Width when pressing TAB (if less than tabstops additional
                    " tabs and spaces will be inserted to equal tabstops
set noexpandtab     " Expand TABs to spaces
set nosmarttab
